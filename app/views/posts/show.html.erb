<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('background.jpg');">
  <div class="banner-content">
    <h1><%= @post.title %></h1>
  </div>
</div>


<div class="container">
  <div class="row">
    <%= render "media" %>
  </div>
</div>



<div class="container padded">
  <% @post.comments.each do |c| %>
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <p><%= c.content %></p>
  <% end %>
      </div>
    </div>


  <div class="row">
    <div class="col-xs-12 col-sm-12">
    <%= simple_form_for [@post, @comment] do |f| %>
    <%= f.input :content, as: :text, label: :Comment %>
    <%= f.submit "Add comment", class: "btn btn-danger" %>
    <% end %>
    </div>
  </div>
</div>
